<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/tv_term_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/rb_all"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_term_all"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@color/grey" />

    <!--第一学期-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/tv_first_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一学期"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_first_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_first_term"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <!--第二学期-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/tv_second_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二学期"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_second_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_second_term"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <!--第三学期-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/tv_third_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三学期"
            android:textColor="@color/primary_text_color"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cb_third_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_third_term"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <include
        layout="@layout/view_bottom_dialog_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


</LinearLayout>
